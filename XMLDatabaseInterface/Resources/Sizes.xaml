<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!--Border thickness-->
    <Thickness x:Key="BorderThickness">0</Thickness>
    <Thickness x:Key="GroupBoxBorderThickness">1</Thickness>
    <Thickness x:Key="ToolTipBorderThickness">2</Thickness>

    <!-- Margins -->
    <Thickness x:Key="GroupBoxMargin">2</Thickness>

    <!--Font sizes-->
    <sys:Double x:Key="FontSize">12</sys:Double>
    <sys:Double x:Key="MediumFontSize">16</sys:Double>
    <sys:Double x:Key="BigFontSize">25</sys:Double>

    <!--Corner Radius-->
    <CornerRadius x:Key="CornerRadius">5</CornerRadius>
    <CornerRadius x:Key="ScrollBarThumbCornerRadius">2</CornerRadius>
    
    <!--Heights and widths-->
    
</ResourceDictionary>